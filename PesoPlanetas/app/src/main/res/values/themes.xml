<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PesoPlanetas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="drawableLeftCompat">@drawable/baseline_monitor_weight_24</item>
        <item name="drawableSize">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="startIconTint">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>